@model Employee
<div class="container">
    <div class="card mb-3" style="max-width: 99%;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/img//@Model.ImgUrl" class="img-fluid rounded-start w-75" alt="@Model.Name">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Full-Name: @Model.Name @Model.Surname</h5>
                    <p class="card-text">Department: @Model.Department.Name </p>
                    <p class="card-text">Position: @Model.Position.Name</p>
                    <p class="card-text">Instagram: <a>@Model.InstLink@(Model.InstLink != null ? "" : "N/A")</a></p>
                    <p class="card-text">Facebook: <a>@Model.FaceLink@(Model.FaceLink != null ? "" : "N/A")</a></p>
                    <p class="card-text">Twitter: <a>@Model.TwitLink@(Model.TwitLink != null ? "" : "N/A")</a></p>
                    <p class="card-text">Linked-In: <a>@Model.LinkedLink@(Model.LinkedLink != null ? "" : "N/A")</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-light fw-bold fs-4" asp-action="Index" asp-controller="Employee">Back</a>
