@model List<Blog>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blogs table</h4>
            <a asp-controller="Blog" asp-action="Create" class="btn btn-warning fw-bold fs-6 text-white">Create Blog</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Author Full-Name
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Blog blog in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src="~/img//@blog.ImgUrl" />
                                </td>
                                <td>
                                    @blog.Title
                                </td>
                                <td>
                                    @blog.Author.Name @blog.Author.Surname
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="Blog" asp-route-id="@blog.Id" class="btn btn-primary btn-info">
                                        <i class="mdi mdi-pencil text-white"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="Blog" asp-route-id="@blog.Id" class="btn btn-danger btn-info">
                                        <i class="mdi mdi-delete text-white"></i>
                                    </a>
                                    <a asp-action="More" asp-controller="Blog" asp-route-id="@blog.Id" class="btn btn-primary">
                                        <i class="mdi mdi-open-in-new text-white"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>